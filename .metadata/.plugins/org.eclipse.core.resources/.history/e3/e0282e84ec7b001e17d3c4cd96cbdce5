void GPIO_voidSetPinDirection(u8 copy_u8PortId,u8 copy_u8PinNum,u8 copy_u8PinMood)
{
	switch(copy_u8PortId)
	{
	case PORTA_ID:

		if(copy_u8PinNum >=7)
		{
			GPIOA_CRL&=~((0b1111)<< (copy_u8PinNum *4));
			GPIOA_CRL|=(copy_u8PinMood |(copy_u8PinNum *4));

		}
		else if(copy_u8PinNum <=15)
		{

		}
		break;
	case PORTB_ID:


		break;
	case PORTC_ID:


		break;
	}
}
